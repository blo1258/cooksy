{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white p-8 rounded-lg shadow-md max-w-xl mx-auto">
            <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Changer le mot de passe</h1>

            {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %}

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(form.oldPassword, 'Ancien mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.oldPassword, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.oldPassword, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                <div>
                    {{ form_label(form.newPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.newPassword.first, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                <div>
                    {{ form_label(form.newPassword.second, 'Répétez le nouveau mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500'}}) }}
                    {{ form_errors(form.newPassword.second, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Changer le mot de passe
                    </button>
                </div>
            {{ form_end(form) }}
            
            <div class="mt-4 text-center">
                <a href="{{ path('app_profil') }}" class="text-blue-500 hover:underline">Page de profil</a>
            </div>
        </div>
    </div>
{% endblock %}
