{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #FF7043;
        }
    </style>
    <div class="container mx-auto p-6 bg-white rounded-lg shadow-lg max-w-lg mt-10">
        <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Modifier mon profil</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="mb-4">
                {{ form_label(form.nom, 'Nom d\'utilisateur', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.imageFile, 'Image de profil', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
                {{ form_errors(form.imageFile) }}
            </div>

            <div class="mt-4 text-center">
                {% if user.image %}
                    <p class="text-sm text-gray-600 mb-2">Image actuelle :</p>
                    <img src="{{ asset('uploads/' ~ user.image) }}" alt="Image de profil actuelle" class="w-24 h-24 rounded-full mx-auto mb-4 border-2 border-gray-300 object-cover">
                {% endif %}
            </div>

            <div class="flex justify-between items-center mt-6">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors">
                    Enregistrer les modifications
                </button>
                <a href="{{ path('app_profil') }}" class="text-gray-600 hover:underline">
                    Annuler
                </a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
