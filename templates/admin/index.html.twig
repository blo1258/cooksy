<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Tableau de Bord</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Inter', sans-serif;
        }
        .sidebar {
            background-color: #2d3748; /* bg-gray-800 */
            color: #ffffff;
            height: 100vh;
        }
        .sidebar a {
            transition: all 0.3s ease;
        }
        .sidebar a:hover {
            background-color: #4a5568; /* bg-gray-700 */
        }
        .sidebar .active {
            background-color: #FF7043;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="flex">
        <!-- Sol Menü -->
        <div class="sidebar w-64 p-6 shadow-lg">
            <h2 class="text-2xl font-bold mb-8 border-b-2 border-orange-500 pb-2">Admin Panel</h2>

            <!-- Admin Bilgileri -->
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="flex justify-center items-center w-full ">
                <div class="user-info flex items-center space-x-2 mb-8">
                    <a href="{{ path('app_profil') }}" class="flex flex-col items-center text-gray-200 hover:text-orange-600 font-medium">
                        {% if app.user.image %}
                            <img src="{{ asset('uploads/' ~ app.user.image) }}" alt="Profile photo" class="profile-avatar w-[76px] h-[76px] rounded-full object-cover border-2 border-orange-500">
                        {% else %}
                            <img src="https://placehold.co/76x76/E0E0E0/FFFFFF?text=P" alt="Profile photo default" class="profile-avatar w-[76px] h-[76px] rounded-full border-2 border-orange-500">
                        {% endif %}
                        <span>{{ app.user.nom }}</span>
                    </a>
                </div>
            </div>
            {% endif %}

            <nav>
                <a href="#" class="flex items-center px-4 py-3 rounded-lg active">
                    <i class="fas fa-chart-line mr-3"></i>
                    Tableau de Bord
                </a>
                <a href="{{ path('app_admin_users') }}" class="flex items-center px-4 py-3 rounded-lg mt-2 hover:bg-gray-700">
                    <i class="fas fa-users-cog mr-3"></i>
                    Gérer les utilisateurs
                </a>
                <a href="{{ path('app_admin_recettes') }}" class="flex items-center px-4 py-3 rounded-lg mt-2 hover:bg-gray-700">
                    <i class="fas fa-utensils mr-3"></i>
                    Gérer les recettes
                </a>
                <a href="{{ path('app_admin_commentaires') }}" class="flex items-center px-4 py-3 rounded-lg mt-2 hover:bg-gray-700">
                    <i class="fas fa-comments mr-3"></i>
                    Gérer les commentaires
                </a>
                <a href="{{ path('app_logout') }}" class="flex items-center px-4 py-3 rounded-lg mt-2 hover:bg-gray-700">
                    <i class="fas fa-sign-out-alt mr-3"></i>
                    Déconnexion
                </a>
                <a href="{{ path('app_accueil') }}" class="flex items-center px-4 py-3 rounded-lg mt-2 hover:bg-gray-700">
                    <i class="fas fa-home mr-3"></i>
                    Retour à l'accueil
                </a>
            </nav>
        </div>

        <!-- Ana İçerik Alanı -->
        <div class="flex-1 p-10">
            <h1 class="text-4xl font-bold text-gray-800 mb-8 border-l-4 border-orange-500 pl-4">Tableau de Bord</h1>

            <!-- İstatistik Kartları -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <div class="bg-white p-6 rounded-xl shadow-md text-center">
                    <i class="fas fa-users text-4xl text-orange-500 mb-4"></i>
                    <h3 class="text-2xl font-semibold text-gray-700 mb-1">2,548</h3>
                    <p class="text-gray-500">Total Utilisateurs</p>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-md text-center">
                    <i class="fas fa-utensils text-4xl text-orange-500 mb-4"></i>
                    <h3 class="text-2xl font-semibold text-gray-700 mb-1">876</h3>
                    <p class="text-gray-500">Total Recettes</p>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-md text-center">
                    <i class="fas fa-comments text-4xl text-orange-500 mb-4"></i>
                    <h3 class="text-2xl font-semibold text-gray-700 mb-1">4,123</h3>
                    <p class="text-gray-500">Total Commentaires</p>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-md text-center">
                    <i class="fas fa-check-double text-4xl text-green-500 mb-4"></i>
                    <h3 class="text-2xl font-semibold text-gray-700 mb-1">12</h3>
                    <p class="text-gray-500">Recettes en attente</p>
                </div>
            </div>

            <!-- Son Eklenen Tarifler -->
            <div class="bg-white p-8 rounded-xl shadow-md">
                <h3 class="text-2xl font-bold text-gray-800 mb-6">Dernières Recettes</h3>
                <ul>
                    <li class="flex justify-between items-center py-4 border-b last:border-b-0">
                        <div>
                            <p class="text-lg font-semibold">Tarte aux fraises</p>
                            <p class="text-sm text-gray-500">par Alice Dupont</p>
                        </div>
                        <a href="#" class="text-sm text-orange-500 hover:underline">Voir</a>
                    </li>
                    <li class="flex justify-between items-center py-4 border-b last:border-b-0">
                        <div>
                            <p class="text-lg font-semibold">Salade de quinoa et avocat</p>
                            <p class="text-sm text-gray-500">par Jean Martin</p>
                        </div>
                        <a href="#" class="text-sm text-orange-500 hover:underline">Voir</a>
                    </li>
                    <li class="flex justify-between items-center py-4 border-b last:border-b-0">
                        <div>
                            <p class="text-lg font-semibold">Ragoût de bœuf à la bière</p>
                            <p class="text-sm text-gray-500">par Pierre Leblanc</p>
                        </div>
                        <a href="#" class="text-sm text-orange-500 hover:underline">Voir</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</body>
</html>
